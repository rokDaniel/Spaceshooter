<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android"
    android:enterFadeDuration="@android:integer/config_shortAnimTime"
    android:exitFadeDuration="@android:integer/config_shortAnimTime">
    <item android:state_pressed="false">
        <layer-list xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
            <item><bitmap android:gravity="center" android:src="@drawable/level_btn_pressed"/></item>
        </layer-list>
    </item>

    <item android:state_enabled="true">
        <layer-list xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
            <item><bitmap android:gravity="center" android:src="@drawable/level_btn"/></item>
        </layer-list>
    </item>

</selector>